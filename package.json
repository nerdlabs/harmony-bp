{
  "name": "harmony-bp",
  "version": "0.0.1",
  "license": "MIT",
  "description": "A small boilerplate to bootstrap web development for the future (ES6, react, isomorphic rendering and much more)",
  "main": "lib/server.js",
  "browser": "lib/browser.js",
  "browserify": {
    "transform": [
      "6to5ify"
    ]
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "nodemon lib/server.js",
    "install-hooks": "cp hooks/* .git/hooks/",
    "jshint": "find lib src -name '*.js' | xargs jsxhint -c .jshintrc"
  },
  "config": {
    "port": "8080"
  },
  "author": {
    "name": "DOM2WG",
    "email": "dom2wg@nerdlabs.it"
  },
  "contributors": [
    {
      "name": "ZauberNerd",
      "email": "zaubernerd@zaubernerd.de"
    },
    {
      "name": "dmbch",
      "email": "daniel@dmbch.net"
    }
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com:nerdlabs/harmony-bp.git"
  },
  "bugs": {
    "url": "https://github.com/nerdlabs/harmony-bp/issues"
  },
  "dependencies": {
    "6to5": "^3.4.1",
    "react": "^0.12.2",
    "react-router": "git://github.com/rackt/react-router.git#master"
  },
  "devDependencies": {
    "6to5ify": "^4.1.0",
    "browserify": "^8.1.3",
    "ecstatic": "^0.5.8",
    "jsxhint": "^0.9.0",
    "myth": "^1.3.0",
    "nodemon": "^1.3.6",
    "watchify": "^2.3.0"
  }
}
